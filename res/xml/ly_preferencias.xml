        ></ListPreference>
        
        <EditTextPreference
        	android:key="@string/ly_preferencias_Peso_Key"
        	android:title="@string/ly_preferencias_Peso_Titulo"
        	android:defaultValue="@string/ly_preferencias_Peso_DefaultValue"
        	android:dialogTitle="@string/ly_preferencias_Peso_Dialogo_Titulo"
        ></EditTextPreference>
    </PreferenceCategory>

    <PreferenceCategory
    	android:key="@string/ly_preferencias_Actividad_Key"
    	android:title="@string/ly_preferencias_Actividad_Titulo">
    	
        <ListPreference
        	android:entries="@array/ly_preferencias_Actividades"
