        	android:title="@string/ly_preferencias_DuracionReg_ListPref_Titulo"
        	android:defaultValue="@string/ly_preferencias_DuracionReg_ListPref_DefaultValue"
        ></ListPreference>
    </PreferenceCategory>
    
    <PreferenceCategory
    	android:key="@string/ly_preferencias_RespMin_Key"
