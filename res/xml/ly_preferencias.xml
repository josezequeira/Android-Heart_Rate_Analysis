        	android:defaultValue="@string/ly_preferencias_Actividad_ListPref_DefaultValue"
        ></ListPreference>
    </PreferenceCategory>
    
    <PreferenceCategory 
    	android:key="@string/ly_preferencias_DuracionReg_Key"
