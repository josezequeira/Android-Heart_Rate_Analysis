<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:title="@string/Act_preferencias_Label"
  android:key="@string/Preferencias">
    
    <PreferenceCategory
    	android:key="@string/ly_preferencias_DatosUsuario_Key"
    	android:title="@string/ly_preferencias_DatosUsuario_Titulo">
        
        <EditTextPreference
        	android:key="@string/ly_preferencias_ID_Usuario_Key"
        	android:title="@string/ly_preferencias_ID_Usuario_Titulo"
        	android:defaultValue="@string/ly_preferencias_ID_Usuario_DefaultValue"
        ></EditTextPreference>
        
        <EditTextPreference 
        	android:key="@string/ly_preferencias_Nombre_Key"
        	android:title="@string/ly_preferencias_Nombre_Titulo" 
        	android:defaultValue="@string/ly_preferencias_Nombre_DefaultValue"
        ></EditTextPreference>
        
        <EditTextPreference 
        	android:key="@string/ly_preferencias_Apellido_Key"
        	android:title="@string/ly_preferencias_Apellido_Titulo"
        	android:defaultValue="@string/ly_preferencias_Apellido_DefaultValue"
