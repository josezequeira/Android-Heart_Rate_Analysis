        <ListPreference
        	android:entries="@array/ly_preferencias_Procesado_Artefactos_Umbral"
        	android:entryValues="@array/ly_preferencias_Procesado_Artefactos_Umbral"
        	android:key="@string/ly_preferencias_Procesado_Artefactos_Key"
        	android:title="@string/ly_preferencias_Procesado_Artefactos_Titulo"
